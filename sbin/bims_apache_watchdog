#!/bin/bash
# Script de vigilancia para Apache

if ! pgrep -x "httpd" > /dev/null; then
    echo "Apache no est치 corriendo. Liberando sem치foros y reiniciando el servicio..."

    # Liberar sem치foros de Apache
    for id in $(ipcs -s | awk '$3 == "apache" {print $2}'); do
        ipcrm -s $id
    done

    # Reiniciar Apache
    service httpd restart

    echo "Proceso completado."
else
    echo "Apache est치 corriendo correctamente."
fi

